			<!-- product excerpt --> 
			<div class="product_text">
				<p style="padding: 5px"> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus tincidunt, nisi vitae lobortis tristique, nisl nisi aliquam nisl, ... </p>
			</div>
		</div>
	<% end %>
	</div>
</div>

<% end %>
