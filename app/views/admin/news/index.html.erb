<div class="heading">
  <h1>Your News</h1>
</div>
 
 <!-- first print all current categories -->
 <ul class="thumbnails">
  <li class="span3">
    <div class="thumbnail">
      <div class="add_picture">

        <img data-src="" alt="">
        <p>
          <i class="icon-plus"></i>
          <%= link_to "add", new_admin_news_path%>
        </p>
      </div>
    </div>
  </li>

  <% @news.each do |news_item| %>
    <li class="span3">
      <div class="thumbnail">
        <img data-src="" alt="">
        <div class="the_content">
          <h3><%= news_item.title %></h3>
        </div>
        <div class="the_actions">
          <p>
            <%= link_to (raw("<i class=\"icon-edit\"></i>")), edit_admin_news_path(news_item), :class => "btn btn-primary"  %>
            <%= link_to (raw("<i class=\"icon-remove\"></i>")), admin_news_path(news_item), :method => :delete, :confirm => "Delete this news item?", :class => "btn btn-primary"%>
          </p>
        </div>
      </div>
    </li>
  <% end %>

</ul>