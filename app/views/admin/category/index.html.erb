<h1>Categories</h1>
 
 <!-- first print all current categories -->
<table>
  <tr>
    <th>Category name</th>
  </tr>
 
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
    </tr>
  <% end %>
</table>

<!-- create a form for categories-->
<%= form_for :category do |f| %>

  <%= f.label :category_name %>:
  <%= f.text_field :name %><br />

  <%= f.submit %>
<% end %>
